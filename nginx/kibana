upstream kibana {
    server 10.99.0.10:5601 fail_timeout=0;
}

server {
    listen 80;
    listen [::]:80;
    server_name kibana.seannguyentrong.com;
    return 301 https://kibana.seannguyentrong.com;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name kibana.seannguyentrong.com;

    ssl_certificate     /etc/letsencrypt/live/seannguyentrong.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/seannguyentrong.com/privkey.pem;
    ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
    ssl_ciphers         HIGH:!aNULL:!MD5;
    ssl_dhparam /etc/ssl/certs/dhparam.pem;

    auth_basic "Restricted";
    auth_basic_user_file /var/www/coin-tracker/nginx/htpasswd;

    location / {
        proxy_pass http://kibana;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
    }

    client_max_body_size 4G;
    keepalive_timeout 10;
}
